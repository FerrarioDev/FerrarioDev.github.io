---
import Section from '../components/Section.astro';
import { certificates } from '../../cv.json'
---
<Section title="Certificates">
    <ul>
        {
            certificates.map(({ name, date, issuer, url, skills })=>{
                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <a href={url} title={`Open ${name}'s certificate'`}>
                                        <h3>{name}</h3>
                                    </a>
                                    <h4>{issuer}</h4>
                                </div>
                            </header>
                            <footer>
                                
                                {skills.map((skill) => (
                                
                                    <span>{skill}</span>
                                
                                ))}
                                
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); 
        gap: 0.5rem; 
        margin-inline: -16px; 
    }

    li {
        margin-bottom: 2rem; 
    }
    article {
        border: 1px solid #f2f2f2;
        gap: 12px;
        display: flex;
        flex-direction: column;
        padding: 12px; 
        height: 100%;
    }
    
    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 2px;
        font-size: 1rem;
    }
    article h4 {
        color: #777;
        font-size: 0.85rem;
    }

    article a {
        color: #111;
    }

    article a:hover {
        text-decoration: underline;
    }

    article p {
        font-size: 0.65rem; 
        line-height: 1rem; 
        margin-bottom: 2px; 
    } 

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 2px; 
        font-size: 0.5rem; 
    }

    footer span {
        border-radius: 4px; 
        background: #eee;
        color: #444;
        font-size: 0.5rem; 
        font-weight: 500;
        padding: 0.1rem 0.4rem; 
    }
</style>

