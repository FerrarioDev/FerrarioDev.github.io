---
import Section from '../components/Section.astro';
import {education} from '../../cv.json'
---
<Section title="Education">
    <ul>
        {education.map(({ institution, startDate, endDate, area, studyType, status, location })=>{
            const startYear =  new Date(startDate).getFullYear()
            const endYear = endDate != null ? new Date(endDate).getFullYear() : status
            const years = `${startYear} - ${endYear}`
            return (
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{institution}</h3>
                                <h4>{area}</h4>
                                <h4>{studyType}</h4>
                            </div>
                            <time>{years}</time>
                        </header>
                        <footer>
                            <p>{location}</p>
                        </footer>
                    </article>
                </li>
            )
        })}
        
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3 {
        font-weight: 500;
        color: #111;
    }
    article h4 {
        color: #222;
        font-weight: 400;
    }
    article a {
        color: #111;
    }

    article a:hover {
        text-decoration: underline;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        align-items: flex;
        margin-bottom: 4px;
    }
    time {
        color: #666;
        font-size: 0.85rem;
    }
</style>